pipeline {
    agent any
    stages {
        stage('Performance Testing') {
            steps {
                echo 'Installing k6'
               sh 'sudo setup_k6.sh'
                echo 'Running K6 performance tests...'
                 sh 'sudo k6 run loadtest/demok6.js'
            }
        }
    }
}
                                                                                                                                                                                                                            
